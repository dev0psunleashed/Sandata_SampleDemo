SELECT * FROM (SELECT ROWNUM ROW_NUMBER, COUNT(*) OVER() TOTAL_ROWS, R1.* FROM (

  SELECT * FROM (

      (SELECT *
          FROM PATIENT
          WHERE BSN_ENT_ID = ?
          AND (TO_CHAR(REC_TERM_TMSTP, 'YYYY-MM-DD') = '9999-12-31' AND CURR_REC_IND = 1)
          ORDER BY %s %s)
  )

) R1)

WHERE ROW_NUMBER BETWEEN %d AND %d
